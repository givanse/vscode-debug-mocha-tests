{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    /**
     * To debug with the transpiled files:
     *  - Disconnect the process
     *  - comment "webroot"
     *  - Attach to the process again
     */
    {
      "type": "chrome", // install the vscode extension: vscode-chrome-debug
      "request": "attach",
      "name": "Karma Chrome",
      "url": "http://localhost:*/karma-runner/debug.html",
      "webRoot": "${workspaceRoot}", // comment to debug on the transpiled files
      "skipFiles": ["node_modules"],
      "port": 9222
    }
  ]
}